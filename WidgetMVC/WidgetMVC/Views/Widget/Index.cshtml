@model IEnumerable<WidgetMVC.Models.Widget>

@{
    ViewBag.Title = "Widget Home";
}

<h2>Widget Home</h2>

<div>
    <h4>Widgets</h4>
    <hr />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrimaryType)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.SubType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Creation)
            </th>
            <th>
                Actions
            </th>
        </tr>
        @foreach(var model in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(item => model.Name)
                </td>

                <td>
                    @Html.DisplayFor(item => model.PrimaryType)
                </td>
                <td>
                    @Html.DisplayFor(item => model.SubType)
                </td>
                <td>
                    @Html.DisplayFor(item => model.Creation)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", model.ID) |
                    @Html.ActionLink("Delete", "Index", model.ID) |
                    @Html.ActionLink("Details", "Index")
                </td>
            </tr>
        }
    </table>

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    @Html.ActionLink("Back to List", "Index")
</p>
